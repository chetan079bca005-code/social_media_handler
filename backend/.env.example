# # Environment
# NODE_ENV=development
# PORT=5000

# # Database
# DATABASE_URL="mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority&appName=<appName>"

# # JWT
# JWT_SECRET=your-super-secret-jwt-key-change-in-production
# JWT_EXPIRES_IN=7d
# JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
# JWT_REFRESH_EXPIRES_IN=30d

# # Redis (for job queue)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# # AI Services (OpenRouter)
# OPENROUTER_API_KEY=your-openrouter-api-key
# AI_TEXT_MODEL=anthropic/claude-3.5-sonnet
# AI_IMAGE_MODEL=stability/sdxl-turbo
# AI_AUDIO_MODEL=openai/whisper

# # Social Media OAuth (Add your actual credentials)
# # Facebook
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=
# FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback

# # Instagram (Uses Facebook API)
# INSTAGRAM_APP_ID=
# INSTAGRAM_APP_SECRET=

# # Twitter/X
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_CALLBACK_URL=http://localhost:5000/api/auth/twitter/callback

# # LinkedIn
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=
# LINKEDIN_CALLBACK_URL=http://localhost:5000/api/auth/linkedin/callback

# # TikTok
# TIKTOK_CLIENT_KEY=
# TIKTOK_CLIENT_SECRET=
# TIKTOK_CALLBACK_URL=http://localhost:5000/api/auth/tiktok/callback

# # YouTube (Google)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# # Pinterest
# PINTEREST_APP_ID=
# PINTEREST_APP_SECRET=
# PINTEREST_CALLBACK_URL=http://localhost:5000/api/auth/pinterest/callback

# # File Upload
# MAX_FILE_SIZE=52428800
# UPLOAD_DIR=./uploads

# # Frontend URL (for CORS)
# FRONTEND_URL=http://localhost:5173

# # Encryption
# ENCRYPTION_KEY=your-32-character-encryption-key!
